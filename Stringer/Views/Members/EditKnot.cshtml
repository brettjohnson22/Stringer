@model Domain.Knot

@{
    ViewData["Title"] = "EditKnot";
    Layout = "~/Views/Shared/_Layout.cshtml";
    List<SelectListItem> interests = new List<SelectListItem>();
    interests.Add(new SelectListItem() { Text = "Food", Value = "food" });
    interests.Add(new SelectListItem() { Text = "Drinking/NightLife", Value = "nightlife" });
    interests.Add(new SelectListItem() { Text = "Activities", Value = "activities" });
    interests.Add(new SelectListItem() { Text = "Animals", Value = "animals" });
    interests.Add(new SelectListItem() { Text = "Outdoors", Value = "outdoors" });
    interests.Add(new SelectListItem() { Text = "Culture", Value = "culture" });
    interests.Add(new SelectListItem() { Text = "Fashion", Value = "fashion" });
    interests.Add(new SelectListItem() { Text = "Wellness", Value = "wellness" });
    interests.Add(new SelectListItem() { Text = "Miscellaneous", Value = "miscellaneous" });
}

<h2>EditKnot</h2>

<h4>Knot</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="EditKnot">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <input type="hidden" asp-for="ApplicationUserId" />
            <input type="hidden" asp-for="LocationId" />
            <input type="hidden" asp-for="Time" />
            <div class="form-group">
                <label asp-for="Type" class="control-label"></label>
                <select asp-for="Type" asp-items="interests"></select>
                <span asp-validation-for="Type" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Comments" class="control-label"></label>
                <input asp-for="Comments" class="form-control" />
                <span asp-validation-for="Comments" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Photo" class="control-label"></label>
                <input asp-for="Photo" class="form-control" />
                <span asp-validation-for="Photo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

