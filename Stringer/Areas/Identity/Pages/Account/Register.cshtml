@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
    List<SelectListItem> roles = new List<SelectListItem>();
    roles.Add(new SelectListItem() { Text = "Member", Value = "Member" });
    roles.Add(new SelectListItem() { Text = "Business", Value = "Business" });
    ViewBag.roles = roles;

    List<SelectListItem> genders = new List<SelectListItem>();
    genders.Add(new SelectListItem() { Text = "Male", Value = "Male" });
    genders.Add(new SelectListItem() { Text = "Female", Value = "Female" });
    genders.Add(new SelectListItem() { Text = "Other", Value = "Other" });
    genders.Add(new SelectListItem() { Text = "", Value = null });
    ViewBag.genders = genders;


}

<h2>@ViewData["Title"]</h2>

<div class="row">
    <div class="col-md-4">
        <form asp-route-returnUrl="@Model.ReturnUrl" method="post">
            <h4>Create a new account.</h4>
            <hr />
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Input.Email"></label>
                <input asp-for="Input.Email" class="form-control" />
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.Password"></label>
                <input asp-for="Input.Password" class="form-control" />
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.ConfirmPassword"></label>
                <input asp-for="Input.ConfirmPassword" class="form-control" />
                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.FirstName"></label>
                <input asp-for="Input.FirstName" class="form-control" />
                <span asp-validation-for="Input.FirstName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.LastName"></label>
                <input asp-for="Input.LastName" class="form-control" />
                <span asp-validation-for="Input.LastName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.Age"></label>
                <input asp-for="Input.Age" class="form-control" />
                <span asp-validation-for="Input.Age" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label>Gender</label>
                <select class='form-control category' style="color: black" asp-for='Input.Gender' asp-items=ViewBag.genders>Select Gender</select>
            </div>
            <div class="form-group">
                <label>Role</label>
                <select class='form-control category' style="color: black" asp-for='Input.ApplicationRoleName' asp-items=ViewBag.roles>Select Role</select>
            </div>


            <button type="submit" class="btn btn-default">Register</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
